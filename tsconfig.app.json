{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],  
  "exclude": ["src/**/__tests__/*"],  
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "types": ["node"],        
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
